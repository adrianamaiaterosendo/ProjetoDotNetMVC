@model IEnumerable<TreinoMVC.Models.Categoria>
<a href="/Contatos/NovaCategoria" class="btn btn-primary" type="submit">Nova Categoria</a>
<hr>
    <h2>Categorias</h2>
    <hr>

<table id="categorias" class= "table table-striped table-bordered">
  <thead>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Ação</th>
    </tr>
</thead>
<tbody>
    @foreach (var categoria in Model)
{
    <tr>
        <td>@categoria.Id</td> 
        <td>@categoria.Nome</td>
        <td><a class="btn btn-primary" href="/Contatos/EditarCategoria/@categoria.Id">Editar</a> <a class="btn btn-danger"href="/Categorias/Deletar/@categoria.Id">Deletar</a></td>    
    </tr>
}
</tbody>
</table><br>

<a href="javascript:history.back();">Voltar</a>


