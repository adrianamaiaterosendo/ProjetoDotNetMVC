@model TreinoMVC.DTO.ContatoDTO;

<h2>Cadastro de Contatos</h2>

<form class = "form-horizontal" asp-controller="Contatos" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value = "0">

    <label asp-for="Nome">Nome</label><br>
    <input type="text" class="form-control" asp-for="Nome" placeholder="Digite um nome"><br>
   

    <label asp-for="CategoriaID">Categoria</label>
    <select class="form-control" asp-for="CategoriaID" asp-items='@(new SelectList(@ViewBag.Categorias,"Id", "Nome"))'></select><br>

      <label asp-for="Email">E-mail</label><br>
    <input type="text" class="form-control" asp-for="Email" placeholder="Digite um e-mail"><br>

      <label asp-for="Telefone">Telefone</label><br>
    <input type="text" class="form-control" asp-for="Telefone" placeholder="Digite um telefone"><br>

    <button class="btn btn-success">Cadastrar</button>

  </form><br>

  <a href="javascript:history.back();">Voltar</a>
